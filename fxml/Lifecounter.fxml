<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.event.ActionEvent?>
<?import javafx.event.EventHandler?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<GridPane fx:id="cardData" stylesheets="@../stylesheets/lifecounter.css" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LifecounterController" >
	<!-- the buttons should only be here if the pane is local -->
	<Button fx:id="healthDownBtn" minWidth="30" minHeight="30"
			styleClass="button" text="-"
			setOnAction="#healthDown"
			GridPane.columnIndex="2" GridPane.rowIndex="0" />
	<Button fx:id="healthUpBtn" minWidth="30" minHeight="30"
			styleClass="button" text="+"
			setOnAction="#healthUp"
			GridPane.columnIndex="3" GridPane.rowIndex="0" />
	<Button fx:id="poisonDownBtn" minWidth="30" minHeight="30"
			styleClass="button" text="-"
			setOnAction="#poisonhDown"
			GridPane.columnIndex="2" GridPane.rowIndex="1" />
	<Button fx:id="poisonUpBtn" minWidth="30" minHeight="30"
			styleClass="button" text="+"
			setOnAction="#poisonhUp"
			GridPane.columnIndex="3" GridPane.rowIndex="1" />
	<Button fx:id="resetBtn" maxWidth="Infinity" minHeight="30"
			styleClass="button" GridPane.columnSpan="4"
			GridPane.columnIndex="0" GridPane.rowIndex="2"
			setOnAction="#resetValues" text="reset Values" />

	<!-- life value -->
	<Text text="Health: " mouseTransparent="true" styleClass="text"
			GridPane.columnIndex="0" GridPane.rowIndex="0" />
	<StackPane minWidth="30" minHeight="30" mouseTransparent="true"
			GridPane.columnIndex="1" GridPane.rowIndex="0" >
		<Text fx:id="lifeText" text="" styleClass="text" />
	</StackPane >

	<!-- poison value -->
	<Text text="Poison: " mouseTransparent="true" styleClass="text"
			GridPane.columnIndex="0" GridPane.rowIndex="1" />
	<StackPane minWidth="30" minHeight="30" mouseTransparent="true"
			GridPane.columnIndex="1" GridPane.rowIndex="1" >
		<Text fx:id="poisonText" text="" styleClass="text" />
	</StackPane >
</GridPane>
