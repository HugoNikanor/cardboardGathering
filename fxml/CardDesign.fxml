<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox stylesheets="@../stylesheets/card.css" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.CardController" fillWidth="true" >
	<padding>
		<Insets top="10" right="10" bottom="10" left="10" />
	</padding>
	<HBox>
		<Text fx:id="name" text="NOOOOOOOOOOO" styleClass="text" />
	</HBox>
	<Pane fx:id="imagePane" minHeight="20.0" minWidth="20.0" styleClass="pane" />
	<TextFlow fx:id="typeBar" textAlignment="JUSTIFY" maxWidth="Infinity" >
		<Text fx:id="type" text="defType" styleClass="text" />
		<Text fx:id="typeDivider" text=" â€” " styleClass="text" />
		<Text fx:id="subType" text="defSub" styleClass="text" />
	</TextFlow>
	<VBox fx:id="textBox" >
		<TextFlow>
		<Text fx:id="ability" text="It kills everything" styleClass="text" />
	</TextFlow>
	<TextFlow>
		<Text fx:id="flavour" text="flavour goes here" styleClass="text" />
	</TextFlow>
	</VBox>
</VBox>
